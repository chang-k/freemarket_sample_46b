.l-content
  %section.l-content__profile
    =link_to users_path, class: "l-content__profile__link" do
      .l-content__profile__link__block
        .icon
          = image_tag('//is2-ssl.mzstatic.com/image/thumb/Purple128/v4/e9/ca/b0/e9cab0c0-4871-0244-0f3d-9300d904d890/source/512x512bb.jpg', width: "60", height: "60")
        %p ユーザー名
        %ul
          %li 評価数 &ensp;7
          %li 出品数 &ensp;6

  .l-content__tabs
    %input{id: "news", type: "radio", name: "tab_item", checked: "checked"}
    %label.l-content__tabs__item{for: "news"} お知らせ
    %input{id: "todo", type: "radio", name: "tab_item"}
    %label.l-content__tabs__item{for: "todo"} やることリスト
    .l-content__tabs__content{id: "news_contents"}
      %ul
        %li
          =link_to users_path, class: "variable-path" do
            = image_tag('//is2-ssl.mzstatic.com/image/thumb/Purple128/v4/e9/ca/b0/e9cab0c0-4871-0244-0f3d-9300d904d890/source/512x512bb.jpg', width: "48", height: "48", class: "icon")
            .nortification
              %p.nortification__content 事務局から個別メッセージ
              %p.nortification__time
                =fa_icon "clock-o", class: 'list-clock'
                %span &nbsp;n 時間前
            =fa_icon "angle-right", class: 'list-arrow-right'
        %li
          =link_to users_path, class: "variable-path" do
            = image_tag('//is2-ssl.mzstatic.com/image/thumb/Purple128/v4/e9/ca/b0/e9cab0c0-4871-0244-0f3d-9300d904d890/source/512x512bb.jpg', width: "48", height: "48", class: "icon")
            .nortification
              %p.nortification__content 事務局から個別メッセージ
              %p.nortification__time
                =fa_icon "clock-o", class: 'list-clock'
                %span &nbsp;n 時間前
            =fa_icon "angle-right", class: 'list-arrow-right'
        %li
          =link_to users_path, class: "variable-path" do
            = image_tag('//is2-ssl.mzstatic.com/image/thumb/Purple128/v4/e9/ca/b0/e9cab0c0-4871-0244-0f3d-9300d904d890/source/512x512bb.jpg', width: "48", height: "48", class: "icon")
            .nortification
              %p.nortification__content 事務局から個別メッセージ
              %p.nortification__time
                =fa_icon "clock-o", class: 'list-clock'
                %span &nbsp;n 時間前
            =fa_icon "angle-right", class: 'list-arrow-right'
        %li
          =link_to users_path, class: "variable-path" do
            = image_tag('//is2-ssl.mzstatic.com/image/thumb/Purple128/v4/e9/ca/b0/e9cab0c0-4871-0244-0f3d-9300d904d890/source/512x512bb.jpg', width: "48", height: "48", class: "icon")
            .nortification
              %p.nortification__content 事務局から個別メッセージ
              %p.nortification__time
                =fa_icon "clock-o", class: 'list-clock'
                %span &nbsp;n 時間前
            =fa_icon "angle-right", class: 'list-arrow-right'
        %li
          =link_to users_path, class: "variable-path" do
            = image_tag('//is2-ssl.mzstatic.com/image/thumb/Purple128/v4/e9/ca/b0/e9cab0c0-4871-0244-0f3d-9300d904d890/source/512x512bb.jpg', width: "48", height: "48", class: "icon")
            .nortification
              %p.nortification__content 事務局から個別メッセージ
              %p.nortification__time
                =fa_icon "clock-o", class: 'list-clock'
                %span &nbsp;n 時間前
            =fa_icon "angle-right", class: 'list-arrow-right'
        %li
          =link_to users_path, class: "variable-path" do
            %p.show-list 一覧を見る
    .l-content__tabs__content{id: "todo_contents"}
      .no-list
        .icon
          = image_tag('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT7O3Br01fmMVD3k6KL-m70GU5XUWN2Q13hZR1okjGmb027sP8ySw', width: "120", height: "100")
        %p 現在、やることリストはありません

  %p.l-content__bottom-space
    購入した商品
  .l-content__bottom-tabs
    %input{id: "current-negotiation", type: "radio", name: "bottom-tab_item", checked: "checked"}
    %label.l-content__bottom-tabs__item{for: "current-negotiation"} 取引中
    %input{id: "past-negotiation", type: "radio", name: "bottom-tab_item"}
    %label.l-content__bottom-tabs__item{for: "past-negotiation"} 過去の取引
    .l-content__bottom-tabs__content{id: "current-negotiation_contents"}
      %ul
        %li
          =link_to users_path, class: "variable-path" do
            = image_tag('//is2-ssl.mzstatic.com/image/thumb/Purple128/v4/e9/ca/b0/e9cab0c0-4871-0244-0f3d-9300d904d890/source/512x512bb.jpg', width: "48", height: "48", class: "icon")
            .nortification
              %p.nortification__content 「〜」を取引中です。
              %span.nortification__status 取引中
            =fa_icon "angle-right", class: 'list-arrow-right'
        %li
          =link_to users_path, class: "variable-path" do
            %p.show-list 一覧を見る
    .l-content__bottom-tabs__content{id: "past-negotiation_contents"}
      %ul
        %li
          =link_to users_path, class: "variable-path" do
            = image_tag('//is2-ssl.mzstatic.com/image/thumb/Purple128/v4/e9/ca/b0/e9cab0c0-4871-0244-0f3d-9300d904d890/source/512x512bb.jpg', width: "48", height: "48", class: "icon")
            .nortification
              %p.nortification__content 「＝」を購入しました。取引が完了しました
              %span.nortification__status 取引完了
            =fa_icon "angle-right", class: 'list-arrow-right'
        %li
          =link_to users_path, class: "variable-path" do
            %p.show-list 一覧を見る
